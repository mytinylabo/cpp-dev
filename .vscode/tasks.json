{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/local/bin/g++",
            "args": [
                "-g",
                "-O2",
                "-Wall",
                "-Werror",
                "-std=c++1z",
                "-I/usr/include",
                "-I${workspaceFolder}/include",
                "-include", "${workspaceFolder}/include/input_helper.h",
                "-ltbb", "-latomic",
                "-DINPUT_HELPER",
                "${file}",
                "-o",
                "${workspaceFolder}/a.out"
            ],
            "options": {
                "cwd": "/usr/local/bin",
                "env": {
                    "PKG_CONFIG_PATH": "/usr/lib/x86_64-linux-gnu/pkgconfig"
                }
            }
        }
    ],
    "version": "2.0.0"
}
